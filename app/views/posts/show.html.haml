= render partial: 'shared/main_header'
.project-title
  = @post.title

.project-detail
  .project-detail__image
    = image_tag @post.image.url

  .current-status
    .total-money
      現在の支援総額
      .total-money__value
        = @total_money.to_i
        円
    .target-money-value
      目標額
      = @post.target_value
      円
      .gage
        .percentage
          = @proportion.floor(0)
          ％
        %meter{value: @proportion, max: 100, class: "money-meter"}

    .supporter
      支援者数
      .number_of_supporters
        = @supporters
        人
    - if user_signed_in?
      = link_to "支援する", "/posts/#{@post.id}/backers/new", class: "money-support-btn"
    - else
      = link_to "支援する", "/users/sign_in", class: "money-support-btn"

.project-textbox
  プロジェクトの内容
  .text
    = @post.text

